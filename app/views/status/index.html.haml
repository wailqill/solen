%table
  %thead
    %tr
      %th Datum
      %th Födelse
      %th Död
      %th Tak 1
      %th Tak 2
      %th Tak 3
  %tbody
    - @statuses.each do |status|
      %tr
        %td= l(status.date, :format => :long)
        %td= status.birth.blank? ? '-' : l(status.birth, :format => :short_time)
        %td= status.disappeared_at.blank? ? '-' : l(status.disappeared_at, :format => :short_time)
        - (1..3).each do |i|
          %td= status.position_string(i, '-')
